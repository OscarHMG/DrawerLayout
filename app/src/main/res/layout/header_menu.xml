<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/header"
    android:layout_width="match_parent"
    android:layout_height="190dp"
    android:background="@color/abc_search_url_text_normal"
    android:orientation="vertical"
    >
    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/abc_ic_commit_search_api_mtrl_alpha"
        android:layout_alignParentRight="true"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:id="@+id/imageView7" />

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/profile_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:border_color="#FF000000"
        android:src="@mipmap/ic_launcher"
        android:layout_marginLeft="16dp"
        android:layout_below="@+id/imageView7"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="17dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout3"
        android:layout_alignTop="@+id/profile_image"
        android:layout_toRightOf="@+id/profile_image"
        android:layout_toEndOf="@+id/profile_image"
        android:layout_marginLeft="17dp"
        android:layout_marginStart="17dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre Apellido"
            android:textSize="12sp"
            android:textColor="#FFF"
            android:gravity="left"
            android:paddingBottom="4dp"
            android:id="@+id/username"
            android:layout_alignTop="@+id/profile_image"
            android:layout_alignLeft="@+id/email"
            android:layout_alignStart="@+id/email" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/abc_ic_commit_search_api_mtrl_alpha"
            android:layout_marginLeft="45dp"
            />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Prepago todo en uno"
        android:id="@+id/email"
        android:gravity="left"
        android:textSize="12sp"
        android:textColor="#fff"
        android:textStyle="bold"
        android:layout_below="@+id/linearLayout3"
        android:layout_alignLeft="@+id/linearLayout3"
        android:layout_alignStart="@+id/linearLayout3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="098123123"
        android:gravity="left"
        android:textSize="14sp"
        android:textColor="#fff"
        android:layout_below="@+id/email"
        android:layout_alignLeft="@+id/email"
        android:layout_alignStart="@+id/email" />

    <LinearLayout
        android:id="@+id/layoutOptions"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:gravity="center_vertical"
        android:layout_alignParentStart="true">

        <ImageView
            android:id="@+id/messages_notifications"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/abc_ic_menu_copy_mtrl_am_alpha"
            android:layout_weight="1"

            />
        <ImageView
            android:id="@+id/ubication"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/abc_ic_menu_share_mtrl_alpha"
            android:layout_weight="1"
            android:background="@drawable/borders"
            />
        <ImageView
            android:id="@+id/purchase_cart"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/abc_ic_menu_cut_mtrl_alpha"
            android:layout_weight="1"
            />
    </LinearLayout>
</RelativeLayout>


